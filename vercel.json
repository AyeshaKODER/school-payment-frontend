{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist",
        "framework": "vite"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|woff|woff2|ttf|eot))",
      "headers": { 
        "Cache-Control": "public, max-age=31536000, immutable" 
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "functions": {
    "app/api/**": {
      "runtime": "nodejs18.x"
    }
  }
}